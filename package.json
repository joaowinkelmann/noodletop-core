{
  "name": "noodletop-core",
  "version": "0.1.0",
  "private": true,
  "author": "joaowinkelmann",
  "description": "Tabletop manager",
  "engines": {
    "node": ">=20.12.2"
  },
  "scripts": {
    "dev": "bun --watch ./src/main.ts",
    "dev:debug": "bun --watch --inspect ./src/main.ts",
    "build": "bun build --compile --minify --sourcemap ./src/main.ts --outfile ./dist/core",
    "build-arm": "bun build --compile --target=bun-linux-arm64 --minify --sourcemap ./src/main.ts --outfile ./dist/core",
    "build-js": "bun build ./src/main.ts --target=bun --minify --outfile=./dist/core.ts",
    "start": "./dist/core",
    "start-js": "bun run --bun ./dist/core.ts",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-push": "bash .husky/pre-push"
    }
  },
  "dependencies": {
    "bun": "^1.1.6",
    "hono": "^4.3.2",
    "mongodb": "^6.5.0"
  },
  "devDependencies": {
    "@types/bun": "^1.0.12",
    "@types/node": "^20.12.7",
    "husky": "^9.0.11",
    "tslint": "^6.1.3",
    "typescript": "^5.4.5"
  }
}
