{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "rules": {
        "no-shadowed-variable": false,
        "quotemark": [true, "single"],
        "semicolon": [true, "always"],
        "trailing-comma": [
            true,
            { "multiline": "never", "singleline": "never" }
        ],
        "no-console": false,
        "indent": [true, "spaces", 4]
    }
}